pipeline {
    agent any

    environment {
        APP_NAME = "for-docker-app-prod"  // PROD container name
        IMAGE = "for-docker-app:prod"     // PROD Docker image
        PORT = "8082"                     // PROD port
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',  
                    url: 'https://github.com/flutterdeveloper2025-tech/For_docker.git'
            }
        }

        stage('Approval for PROD') {
            steps {
                input message: 'Deploy to PROD?'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker rm -f $APP_NAME || true
                docker run -d --name $APP_NAME -p $PORT:80 $IMAGE
                '''
            }
        }

        stage('Smoke Test') {
            steps {
                sh '''
                STATUS=$(curl -o /dev/null -s -w "%{http_code}" http://localhost:$PORT)
                if [ "$STATUS" != "200" ]; then
                    echo "‚ùå App not reachable"
                    exit 1
                fi
                echo "‚úÖ PROD App is running in Docker"
                '''
            }
        }
    }

    post {
        success { echo "üéâ Docker PROD deployment successful" }
        failure { echo "‚ùå Docker PROD deployment failed" }
    }
}
