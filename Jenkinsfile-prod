pipeline {
    agent any

    environment {
        APP_NAME = "for-docker-app-prod"     // PROD container
        IMAGE    = "for-docker-app:prod"     // Current image
        BACKUP   = "for-docker-app:prod-last" // Last working image
        PORT     = "8082"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/flutterdeveloper2025-tech/For_docker.git'
            }
        }

        stage('Approval for PROD') {
            steps {
                input message: 'Deploy to PROD?'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh """
                # Build new image
                docker build -t $IMAGE .

                # Tag current PROD image as backup before deploying
                if docker image inspect $IMAGE >/dev/null 2>&1; then
                    docker tag $IMAGE $BACKUP
                fi
                """
            }
        }

        stage('Run Container') {
            steps {
                sh """
                docker rm -f $APP_NAME || true
                docker run -d --name $APP_NAME -p $PORT:80 $IMAGE
                """
            }
        }

        stage('Smoke Test') {
            steps {
                script {
                    try {
                        sh """
                        STATUS=\$(curl -o /dev/null -s -w "%{http_code}" http://localhost:9091)
                        if [ "\$STATUS" != "200" ]; then
                            echo "‚ùå Smoke test failed, HTTP \$STATUS"
                            exit 1
                        fi
                        echo "‚úÖ Smoke test passed"
                        """
                    } catch (err) {
                        echo "‚ö†Ô∏è Rolling back to last working image"
                        sh """
                        docker rm -f $APP_NAME || true
                        docker run -d --name $APP_NAME -p $PORT:80 $BACKUP
                        """
                        error("‚ùå Deployment failed, rolled back to last working image")
                    }
                }
            }
        }
    }

    post {
        success {
            echo "üéâ Docker PROD deployment successful"
        }
        failure {
            echo "‚ùå Docker PROD deployment failed"
        }
    }
}
