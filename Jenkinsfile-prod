pipeline {
    agent any

    environment {
        APP_NAME   = "for-docker-app-prod"  // PROD container name
        IMAGE      = "for-docker-app:prod"  // PROD Docker image
        PORT       = "8082"                  // PROD port
        PREV_IMAGE = ""                       // Previous image ID for rollback
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',  
                    url: 'https://github.com/flutterdeveloper2025-tech/For_docker.git'
            }
        }

        stage('Approval for PROD') {
            steps {
                input message: 'Deploy to PROD?'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Capture previous image ID for rollback
                    env.PREV_IMAGE = sh(script: "docker images -q $IMAGE", returnStdout: true).trim()
                    echo "Previous image ID: ${env.PREV_IMAGE}"
                    // Build new image
                    sh "docker build -t $IMAGE ."
                }
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker rm -f $APP_NAME || true
                docker run -d --name $APP_NAME -p $PORT:80 $IMAGE
                '''
            }
        }

        stage('Smoke Test') {
            steps {
                script {
                    def status = sh(script: "curl -o /dev/null -s -w \"%{http_code}\" http://localhost:$PORT", returnStdout: true).trim()
                    if (status != "200") {
                        error "‚ùå Smoke test failed! HTTP status: $status"
                    } else {
                        echo "‚úÖ Smoke test passed"
                    }
                }
            }
        }
    }

    post {
        failure {
            echo "‚ùå PROD deployment failed ‚Äì initiating rollback"

            script {
                if (env.PREV_IMAGE) {
                    echo "üîÑ Rolling back to previous image: ${env.PREV_IMAGE}"
                    sh '''
                    docker rm -f $APP_NAME || true
                    docker run -d --name $APP_NAME -p $PORT:80 $PREV_IMAGE
                    '''
                } else {
                    echo "‚ö† No previous image found for rollback!"
                }
            }

            // Email notification on failure
            mail to: 'flutterdeveloper2025@gmail.com',
                 subject: "Jenkins Build FAILED: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build failed. Check Jenkins console here: ${env.BUILD_URL}"
        }

        success {
            echo "üéâ Docker PROD deployment successful"
            // Email notification on success
            mail to: 'flutterdeveloper2025@gmail.com',
                 subject: "Jenkins Build SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build succeeded. Check Jenkins console here: ${env.BUILD_URL}"
        }
    }
}
