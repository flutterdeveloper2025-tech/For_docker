pipeline {
    agent any

    environment {
        APP_NAME = "for-docker-app"   // DEV container name
        IMAGE = "for-docker-app:dev"  // DEV Docker image
        PORT = "8081"                 // DEV port
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'docker-dev',  
                    url: 'https://github.com/flutterdeveloper2025-tech/For_docker.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker rm -f $APP_NAME || true
                docker run -d --name $APP_NAME -p $PORT:80 $IMAGE
                '''
            }
        }

        stage('Smoke Test') {
            steps {
                sh '''
                STATUS=$(curl -o /dev/null -s -w "%{http_code}" http://localhost:$PORT)
                if [ "$STATUS" != "200" ]; then
                    echo "‚ùå App not reachable"
                    exit 1
                fi
                echo "‚úÖ DEV App is running in Docker"
                '''
            }
        }
    }

    post {
        success { echo "üéâ Docker DEV deployment successful" }
        failure { echo "‚ùå Docker DEV deployment failed" }
    }
}
